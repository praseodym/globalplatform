VERSION=1.3.0
DIR=GPShell-$(VERSION)

all:	bin_package

bin_package:
	rm -rf $(DIR)
	mkdir $(DIR)
	cp Debug/GPShell.exe GlobalPlatform.dll README CHANGES COPYING helloInstall.txt helloDelete.txt helloInstallGP211.txt helloDeleteGP211.txt list.txt listgp211.txt HelloWorld.bin $(DIR)
	zip GPShell-$(VERSION).zip $(DIR)/*

clean:
	rm -rf GPShell-$(VERSION).zip $(DIR)
